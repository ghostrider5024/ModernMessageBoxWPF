<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ImplicitUsings>enable</ImplicitUsings>
	
	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	<PackageId>ModernMessageBoxWPF</PackageId>
	<Version>1.0-preview.3</Version>
	<Authors>ThankLee</Authors>
	<Description>A custom WPF message box library</Description>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
	<RepositoryUrl>https://github.com/ghostrider5024/ModernMessageBoxWPF.git</RepositoryUrl>
	<IncludeSymbols>true</IncludeSymbols> 
	<IncludeSource>true</IncludeSource>   
    <Title>ModernMessageBoxWPF</Title>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
